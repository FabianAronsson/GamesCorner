@page
@model RegisterModel

<h1>@ViewData["Title"]</h1>

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="col-8 opacity-75 d-flex flex-column justify-content-center align-items-center" 
         style="background-color: #101010;color: orangered; font-weight: 800; margin-top:3rem">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="col-12" style="text-align: center; font-weight: 800; color: orangered">
                <h2>Create a new account</h2>
            </div>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.PostalCode" class="form-control"/>
                <label asp-for="Input.PostalCode" class="form-label"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.City" class="form-control"/>
                <label asp-for="Input.City" class="form-label"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.Address" class="form-control"/>
                <label asp-for="Input.Address" class="form-label"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="col-12 form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <input type="checkbox" class="check mb-3" style="margin-right:3px" required>
                <p>I accept the<a href="/termOfUse">Terms of use</a> & <a href="/termOfUse">Privacy Policy</a></p>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg text-black fw-bolder" style="background-color: orangered">Register</button>
                <div class="signIn">
                    <p>Already have an account?<a href="/authentication/login">Sign in</a></p>
                </div>
            </div>
        </form>
    </div>
    <hr/>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
