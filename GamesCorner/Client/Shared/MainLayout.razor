<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    <main>
        <div class="top-row px-4 auth bg-black">
            <a href="">
                <img src="static/logo.svg" alt="logo" class="logo" style="width: 5rem; padding-top: 1rem" />
            </a>
            <div class="search-bar-1 col-lg-8 col-md-8">
                <SearchBar />
            </div>
            <div class="buttons">
                <UserButton />
                <CartButton />
            </div>


        </div>
        <div class="search-bar-2">
            <SearchBar />
        </div>
        <AuthorizeView Roles="Administrator">
            <div class="nav-item px-3 col-12 text-center" style="background-color:white">
                <NavLink class="nav-link" href="admin/dashboard">
                    <span class="oi oi-key" aria-hidden="true"></span> Admin Panel
