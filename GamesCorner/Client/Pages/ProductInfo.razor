@page "/ProductInfo/{ProductId}"
@using GamesCorner.Client.Services.CartService
@inject IHttpClientFactory HttpClientFactory
@inject ICartService CartService
@inject AuthenticationStateProvider AuthenticationStateProvider


<div class="page align-content-center justify-content-center" style="background-image: url(@Product.BannerUrl); background-repeat: no-repeat;">
	<div class="container">
		<div class="row pt-5"></div>
		<div class="row pt-5"></div>
		<div class="row pt-5"></div>
		<div class="row flex-wrap pb-4">
			<div class="col-md-4">
				<div class="card-img">
					<img class="rounded-2 img-fluid" src="@Product.ImageUrl" alt="" />
				</div>
			</div>
			<div class="col-md-4"></div>
			<div class="col-md-4" style="height: 100%"> 
				<div class="card bg-dark bg-opacity-75 rounded-2">
					<div class="card-header border-0 h2 text-light">@Product.Name</div>
					<div class="text-center h3 text-light">3/5 Stars</div>
					@if (Product.InStock == true)
					{

						<div class="card-body text-light">In stock</div>
						<div class="card-body h5 card-title text-light">@Product.Price Kr</div>
						<button href="/ShoppingCart" class="btn btn-primary @(cartText == "Added to cart" ? "btn-lg" : "")" style="@(cartText == "Added to cart" ? "background-color: green;" : "background-color: orangered;")" @onclick="AddProductToCart">@cartText</button>
					}
					else
					{
						<div class="card-body text-light">Out of stock</div>
					}
				</div>
			</div>
		</div>
		<div class="row p-5">
			<div class=" text-light bg-dark rounded-3 p-4">
				<h3>About the Game</h3>
				<p>@Product.Description</p>
			</div>
		</div>

		<div class="row p-5">
			<div class="text-light bg-black bg-opacity-25 rounded-3 p-4">
				<h3>Reviews</h3>
				<div class="justify-content-center align-content-center">
					<p class="align-self-center">Average Score Goes here</p>
				</div>
			</div>
		</div>

		<div class="container d-flex justify-content-center ">
			
			@if (Reviews is null)
			{
			    <div>Leave your review here!</div>
                <EditForm Model="newReview" OnValidSubmit="CreateNewReview">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <div class="mb-3">
                        <label for="score">score this product</label>
                        <InputNumber id="score" @bind-Value="newReview.Rating" class="form-control" />
                        <ValidationMessage For="@(() => newReview.Rating)" />
                    </div>
                    <div class="mb-3">
                        <InputText id="content" @bind-Value="newReview.Content" class="form-control" />
                        <ValidationMessage For="@(() => newReview.Content)" />
                    </div>
                    <button type="submit" class="btn btn-primary mb-5">Submitt</button>
                </EditForm>
			}
			else
			{
			    <div class="row col-12 text-center align-items-center justify-content-center m-0">
					<div class=" col-12 d-flex m-3 align-items-center justify-content-evenly">
                        @foreach (var review in Reviews)
                        {
                            <div class="card col-3 m-2">
                                <div class="card-header d-flex">
                                    <i class="oi oi-person"></i>
                                    <div class="text-white customer">Anonymous</div>
                                </div>
                                <div class="card-body p-0 m-0">
									<div class="m-1 star-rating">@GetStarRating(@review.Rating)</div>
                                    <p class="mb-2 text-white">@review.Content</p>
                                </div>
                                <div class="card-footer align-self-start text-white footer">@review.CreatedDateTime</div>
                            </div>
                            <hr/>
                        }
                    </div>
                </div>
			}
                
		</div>
	</div>

</div>

